<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<!--给实体类起一个别名 Repository -->
		<typeAlias type="cn.edu.fudan.se.cochange_analysis.git.bean.Repository"
			alias="Repository" />
	</typeAliases>
	<!--数据源配置 使用mysql数据库 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="jdbc" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
				<property name="url" value="jdbc:mysql://localhost:3306/co-change" />
				<property name="username" value="root" />
				<property name="password" value="root" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<!--userMapper.xml装载进来 同等于把“dao”的实现装载进来 -->
		<mapper resource="mapper/RepositoryMapper.xml" />
		<mapper resource="mapper/CommitMapper.xml" />
		<mapper resource="mapper/ChangeFileMapper.xml" />
		<mapper resource="mapper/CommitParentMapper.xml" />
		<mapper resource="mapper/CommitTypeMapper.xml" />
	</mappers>
</configuration>